<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xue.mapper.ProductImageMapper">
    <delete id="deleteProductImageByID" parameterType="int">
        delete from productimage where id = #{id}
    </delete>

    <select id="selectProductImages" resultType="ProductImage">
        select * from productimage;
    </select>

    <select id="selectProductImageByID" resultType="ProductImage" parameterType="int">
        select * from productimage where id = #{id}
    </select>

    <update id="updateProductImage" parameterType="ProductImage">
        update productimage
        set pid = #{pid}, type = #{type}
        where id = #{id};
    </update>

    <insert id="insert" parameterType="ProductImage" keyProperty="id" useGeneratedKeys="true">
        insert into productimage(pid, type) VALUES (#{pid}, #{type});
    </insert>

    <select id="selectProductImageByPid" parameterType="int" resultType="ProductImage">
        select * from productimage where pid = #{pid};
    </select>

    <select id="list" parameterType="map" resultType="ProductImage">
        select * from productimage where pid = #{pid} and type = #{type}
    </select>
</mapper>