<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xue.mapper.PropertyValueMapper">
    <select id="getPropertyValues" parameterType="int" resultType="PropertyValue">
        select *
        from propertyvalue
        where pid = #{pid};
    </select>

    <insert id="insert" parameterType="PropertyValue" keyProperty="id" useGeneratedKeys="true">
        insert into propertyvalue (pid, ptid, value)
        values (#{pid},#{ptid},#{value});
    </insert>

    <select id="get" parameterType="map" resultType="PropertyValue">
        select * from propertyvalue where pid = #{pid} and ptid = #{ptid}
    </select>

    <update id="update" parameterType="PropertyValue">
        update propertyvalue
        set value=#{value}
        where id=#{id};
    </update>
</mapper>